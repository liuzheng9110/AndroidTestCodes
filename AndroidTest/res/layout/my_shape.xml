<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/shape_01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_01"
            android:text="圆角" />

        <Button
            android:id="@+id/shape_02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_02"
            android:text="填充" />

        <Button
            android:id="@+id/shape_03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_03"
            android:text="描边" />

        <Button
            android:id="@+id/shape_04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_04"
            android:text="边距" />

        <Button
            android:id="@+id/shape_05"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_bg_selector"
            android:text="shape 005"
            android:textColor="@color/text_color_selector" />

        <Button
            android:id="@+id/shape_06"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_06"
            android:gravity="center"
            android:text="渐变" />

        <Button
            android:id="@+id/shape_07"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:shadowColor="@color/title_text_color"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:text="文字阴影" />

        <ImageView
            android:id="@+id/shape_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_08"
            android:gravity="center" />

        <Button
            android:id="@+id/shape_09"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/shape_09" />

    </LinearLayout>

</ScrollView>